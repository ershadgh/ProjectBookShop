@page
@model ProjectBookShop.Areas.Admin.Pages.Publisherr.EditModel

@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">

            </div>
            <form method="post">
            <div class="row card-body mb-3">
                <div class="col-md-4">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="@Model.publisher.PublisherID" />
                        <div class="col-md-2">
                            <label asp-for="@Model.publisher.PublisherName" class="control-label"></label>
                        </div>
                        <div col-md-10>
                            <input type="text" asp-for="@Model.publisher.PublisherName"  class="form-control"/>
                            <span asp-validation-for="@Model.publisher.PublisherName" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-default">ویرایش ناشر</button>
                </div>
            </div>
           
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}