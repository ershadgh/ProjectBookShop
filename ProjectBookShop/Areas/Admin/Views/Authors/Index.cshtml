@model IEnumerable<ProjectBookShop.Models.Author>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Index</h2>
@{
    foreach (var item in ViewBag.EntitiyState as List<EntityStates>)
    {
        <span>Entitiysatae:@item.EntitySate</span><span>EntityName:@item.EntityName</span>
        <br />
    }
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">
                نویسندگان
            </div>
            <p>
                <a asp-action="Create" class="btn btn-primary">افزودن نویسنده جدید </a>
            </p>
            <div class="body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>
                            <th>
                                مشاهده کتاب ها
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    <a asp-action="AuthorBooks" asp-route-id="@item.AuthorID" class="btn btn-info">مشاهده کتاب</a>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.AuthorID" class="btn btn-success btn-icon">
                                        <i class="fa fa-edit">

                                        </i>
                                    </a> |
                                    <a asp-action="Details" asp-route-id="@item.AuthorID" class="btn btn-info btn-icon">
                                        <i class="fa fa-eye">

                                        </i>
                                    </a> |
                                    <a asp-action="Delete" asp-route-id="@item.AuthorID" class="btn btn-danger btn-icon">
                                        <i class="fa fa-trash">

                                        </i>
                                    </a>
                                </td>   
                            </tr>
                        }
                        <tr>
                            <td>
                                @ViewData["id"]
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>


