@model ProjectBookShop.Models.ViewModels.TranslatorCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2 dir="rtl">ایجاد مترجم جدید</h2>

<h4 dir="rtl">مترجم</h4>
<hr />
<div class="row " dir="rtl">
    <div class="col-md-4  " dir="rtl">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Family" class="control-label"></label>
                <input asp-for="Family" class="form-control" />
                <span asp-validation-for="Family" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input  type="submit" value="ذخیره اطلاعات" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div dir="rtl">
    <a asp-action="Index">برگشت به لیست مترجمان</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
